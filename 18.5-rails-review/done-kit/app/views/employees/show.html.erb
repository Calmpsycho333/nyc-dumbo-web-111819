<%= render 'header' %>
<h1><%=@employee.name%></h1>
<img src=<%= @employee.img_url%> style="width:100px; height: auto"/>
<br>

<p><strong> Title: </strong><%=@employee.title%></p>
<p><strong> Office: </strong><%=@employee.office%></p>
<p><strong> Alias: </strong><%=@employee.alias%></p>
<p><strong> Dog: </strong><%=link_to @employee.dog.name, dog_path(@employee.dog) %></p>

<%= button_to "Edit #{@employee.name}", edit_employee_path(@employee), method: :get%>
<%= button_to "Fire #{@employee.name}!", employee_path, method: :delete%>
<%= render 'footer' %>
