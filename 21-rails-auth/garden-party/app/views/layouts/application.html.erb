<!DOCTYPE html>
<html>
  <head>
    <title>GardenParty</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Press+Start+2P&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="menu">
      <div class="container">
        <nav>
          <%= link_to "Gardens", gardens_path, class: "item" %>
          <%= link_to "My Gardens", my_gardens_path, class: "item" %>
          <% if @logged_in_gardener %>
            <%= link_to "New Garden", new_garden_path, class: "item" %>
          <% end %>
        </nav>
        <nav class="right">
          <% if @logged_in_gardener %>
            <span class="item">
              Welcome, <%= "#{@logged_in_gardener.username}" %>!
            </span>
            <%= link_to "Logout", logout_path, method: :delete, class: "item" %>
          <% else %>
            <%= link_to "Sign Up", signup_path, class: "item" %>
            <%= link_to "Login", login_path, class: "item" %>
          <% end %>
        </nav>
      </div>
    </header>
    <div class="main">
      <div class="container">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
