<h1>Make a garden</h1>

<% if @errors %>
  <% @errors.each do |error| %>
    <p style="color: red"><%= error %></p>
  <% end %>
<% end %>

<%= form_for @garden do |f| %>
  <%= f.label :name, "Name It" %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <br>
  <%= f.label :staff_count %>
  <%= f.number_field :staff_count %>
  <br>
  <%= f.label :length %>
  <%= f.number_field :length %>
  <br>
  <%= f.label :width %>
  <%= f.number_field :width %>
  <br>
  <%= f.submit %>
<% end %>